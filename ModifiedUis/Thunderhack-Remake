local Library = {};

Library = {
    Themes = {
        MainColor = Color3.fromRGB(25, 25, 25);
        AccentColor = Color3.fromRGB(255, 255, 255);
        InactiveColor = Color3.fromRGB(30, 30, 30);
    };
};

function Library:AddCorner(Idx)
    assert(Idx ~= nil, "Invalid Argument")

    local Settings = {
        Radius = Idx.Radius or Idx.radius or Idx.Rad or Idx.rad or Idx.Roundness or Idx.roundness;
    };

    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = Settings.Radius or UDim.new(0, 5)

    return Corner
end

local GuiButton = Instance.new("TextButton")
GuiButton.Size = UDim2.new(0, 41, 0, 41)
GuiButton.Position = UDim2.new(0, 230, 0, -45)
GuiButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
GuiButton.BorderSizePixel = 0
GuiButton.Text = "Open"
GuiButton.TextSize = 15
GuiButton.BackgroundTransparency = 0.15
GuiButton.TextColor3 = Color3.fromRGB(255, 255, 255)
GuiButton.Font = Enum.Font.Gotham
GuiButton.Parent = gui

Library:AddCorner({Rad = UDim.new(1, 0)}).Parent = GuiButton

local Main = Instance.new("ScrollingFrame")
Main.Size = UDim2.new(1, 80, 1, 80)
Main.CanvasSize = UDim2.new(0, 0, 3, 0)
Main.Position = UDim2.new(0, -40, 0, -60)
Main.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Main.BorderSizePixel = 0
Main.ZIndex = -9e9
Main.Parent = gui
Main.ScrollBarThickness = 0
Main.BackgroundTransparency = 1

GuiButton.MouseButton1Click:Connect(function()
    Main.Visible = not Main.Visible
end)

